import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner scr= new Scanner(System.in);
         int n = scr.nextInt(); 
        int[] arr = new int[n]; 
        for (int i = 0; i < n; i++) {
            arr[i] = scr.nextInt();
        }
        int posCount = 0;
        int negCount = 0;
        for (int i = 0; i < n; i++) {
            if (arr[i] > 0) {
                posCount++;
            } else if (arr[i] < 0) {
                negCount++;
            }
        }
        System.out.printf("Count of Positive Integer is %.2f\n", (double) posCount);
        System.out.printf("Count of Negative Integer is %.2f\n", (double) negCount);
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
    }
}
